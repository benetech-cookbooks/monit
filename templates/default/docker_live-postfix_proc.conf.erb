check program docker_live-postfix_proc with path "/usr/bin/docker top live-postfix"
    start   program = "/usr/bin/docker start live-postfix" with timeout 120 seconds
    stop    program = "/usr/bin/docker stop live-postfix" with timeout 120 seconds
    if status != 0 then restart
    if 10 restarts within 10 cycles then unmonitor